[core]
    quotepath = false  # proper display of UTF-8 filepaths

[include]
    path = .gitconfig.d/user.cfg  # put user.name and user.email there

[alias]
    graph = log --oneline --decorate --graph

[pull]
    ff = only  # never create merge commits automatically

[url "git@github.com:"]
    insteadOf = github://
    insteadOf = gh://

[url "git@gitlab.com:"]
    insteadOf = gitlab://

# vim: syntax=gitconfig
