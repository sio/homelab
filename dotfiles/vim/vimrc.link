"
" Configuration is defined in ~/.vim/config/*.vim files
" This file is only a loader for partial configs from that directory
"

let partials_storage = '~/.vim/config'
let partials = glob(fnameescape(partials_storage).'/*.vim', 1, 1)

function Include(file)
    if filereadable(expand(a:file))
        exe 'source' a:file
    endif
endfunction

call map(partials, 'Include(v:val)')
